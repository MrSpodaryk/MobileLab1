<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".SignUpActivity">

    <Button
        android:id="@+id/sign_up"
        style="@style/ButtonTheme"
        android:text="@string/sign_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        style="@style/LinearLayoutTheme"
        app:layout_constraintBottom_toTopOf="@+id/sign_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_actionbar">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_up_text_input_name"
            style="@style/TextInputLayoutTheme">

            <EditText
                android:id="@+id/name"
                style="@style/InputAreaTheme"
                android:hint="@string/name"
                android:inputType="textPersonName" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_up_text_input_email"
            style="@style/TextInputLayoutTheme">

            <EditText
                android:id="@+id/email"
                style="@style/InputAreaTheme"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_up_text_input_password"
            style="@style/TextInputLayoutTheme">

            <EditText
                android:id="@+id/password"
                style="@style/InputAreaTheme"
                android:hint="@string/password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_up_text_input_confirm_password"
            style="@style/TextInputLayoutTheme">

            <EditText
                android:id="@+id/confirm_password"
                style="@style/InputAreaTheme"
                android:hint="@string/confirm_password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <include layout="@layout/toolbar" />

</android.support.constraint.ConstraintLayout>